<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res/com.sumeet.hoothere"
    android:background="@drawable/listview_selector_gray">
    
	<RelativeLayout 
	    android:id="@+id/rl_search_friend_rowitem_contents"
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:layout_centerVertical="true">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp">
	        
	        <RelativeLayout 
	            android:id="@+id/rl_search_friend_rowitem_avatar"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1">
	            
	            <ImageView
                    android:id="@+id/iv_search_friend_rowitem_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_temp_avatar1"
                    android:scaleType="centerCrop"/>
	            
	            <ImageView
	                android:id="@+id/iv_search_friend_rowitem_avatar_cover"
	                android:layout_width="60dp"
	                android:layout_height="60dp"
	                android:src="@drawable/icon_avatar_cover_white"
	                android:scaleType="centerCrop"/>
	        </RelativeLayout>
	        
	        <LinearLayout 
	            android:id="@+id/ll_search_friend_rowitem_name_status"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="3"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:orientation="vertical">
	            
	            <RelativeLayout 
	                android:id="@+id/rl_search_friend_rowitem_name"
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:layout_weight="1">
	                
					<TextView
					    android:id="@+id/txt_search_friend_rowitem_name"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_centerVertical="true"
					    android:layout_marginLeft="2dp"
					    android:textColor="@color/color_text_dark_gray_666666"
					    android:textSize="18sp"
					    android:text="A"/>
	            </RelativeLayout>
	            
	            <RelativeLayout 
	                android:id="@+id/rl_search_friend_rowitem_status"
	                android:layout_width="match_parent"
	                android:layout_height="0dp"
	                android:layout_weight="1"
	                android:visibility="gone">
	                
	                <ImageView
	                    android:id="@+id/iv_search_friend_rowitem_status"
	                    android:layout_width="wrap_content"
	                    android:layout_height="match_parent"
	                    android:paddingTop="7dp"
	                    android:paddingBottom="7dp"
	                    android:src="@drawable/icon_status_busy"
	                    android:scaleType="fitCenter"/>
	                
					<TextView
					    android:id="@+id/txt_search_friend_rowitem_status"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_centerVertical="true"
					    android:layout_toRightOf="@+id/iv_search_friend_rowitem_status"
					    android:layout_marginLeft="5dp"
					    android:textColor="@color/color_text_dark_gray_666666"
					    android:textSize="15sp"
					    android:text="A"/>
	            </RelativeLayout>
	        </LinearLayout>
	        
	        <RelativeLayout 
	            android:id="@+id/rl_search_friend_rowitem_action"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1">
	            
	            <RelativeLayout 
	                android:id="@+id/rl_search_friend_rowitem_add"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent">
	                
	                <ImageView
	                    android:id="@+id/iv_search_friend_rowitem_add"
	                    android:layout_width="25dp"
	                    android:layout_height="25dp"
	                    android:layout_centerInParent="true"
	                    android:src="@drawable/add_friend"
	                    android:scaleType="fitCenter"/>
	            </RelativeLayout>
	            
	            <RelativeLayout 
	                android:id="@+id/rl_search_friend_rowitem_reject"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent">
	                
	                <ImageView
	                    android:id="@+id/iv_search_friend_rowitem_reject"
	                    android:layout_width="25dp"
	                    android:layout_height="25dp"
	                    android:layout_centerVertical="true"
	                    android:layout_alignParentRight="true"
	                    android:src="@drawable/icon_decline"
	                    android:scaleType="fitCenter"/>
	                
   	                <ImageView
	                    android:id="@+id/iv_search_friend_rowitem_accept"
	                    android:layout_width="25dp"
	                    android:layout_height="25dp"
	                    android:layout_centerVertical="true"
	                    android:layout_alignParentLeft="true"
	                    android:src="@drawable/icon_checkmark"
	                    android:scaleType="fitCenter"/>
	            </RelativeLayout>
	            
		        <RelativeLayout 
		            android:id="@+id/rl_search_friend_rowitem_type"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent">
		            
				    <ImageView
				        android:id="@+id/iv_search_friend_rowitem_type"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:src="@drawable/friend"
				        android:scaleType="fitCenter"/>
				</RelativeLayout>
	        </RelativeLayout>
	    </LinearLayout>
	</RelativeLayout>
</RelativeLayout>
