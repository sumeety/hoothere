<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
	<RelativeLayout 
        android:id="@+id/rl_frag_signup_fb_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_purple">
        
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:padding="10dp">
		    
		    <ImageView
		        android:id="@+id/iv_frag_signup_fb_header_back"
		        android:layout_width="30dp"
		        android:layout_height="45dp"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:paddingRight="10dp"
		        android:layout_centerVertical="true"
		        android:src="@drawable/icon_header_back_white"
		        android:scaleType="fitCenter"/>
		    
		    <TextView
		        android:id="@+id/txt_frag_signup_fb_header_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:gravity="center"
		        android:text="@string/signup_fb_title"
		        android:textSize="20sp"
		        android:textStyle="bold"
		        android:textColor="@android:color/white"/>
		</RelativeLayout>        
    </RelativeLayout>
    
	<LinearLayout 
	    android:id="@+id/ll_frag_signup_fb_contents"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/rl_frag_signup_fb_header"
	    android:layout_marginTop="10dp"
	    android:orientation="vertical"
	    android:paddingLeft="20dp"
	    android:paddingRight="20dp">
	    
	    <LinearLayout 
	        android:id="@+id/ll_frag_signup_fb_contents_name_avatar"
	        android:layout_width="match_parent"
	        android:layout_height="100dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:orientation="horizontal">
	        
	        <RelativeLayout 
	            android:id="@+id/rl_frag_signup_fb_contents_avatar"
	            android:layout_width="80dp"
	            android:layout_height="match_parent">
	            
	            <ImageView
	                android:id="@+id/iv_frag_signup_fb_contents_avatar"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:layout_margin="1dp"
	                android:src="@drawable/defaultpic"
	                android:scaleType="fitCenter"/>
	            
	            <ImageView
	                android:id="@+id/iv_frag_signup_fb_contents_avatar"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:src="@drawable/icon_avatar_cover_white"
	                android:scaleType="fitCenter"/>
	        </RelativeLayout>
	        
	        <RelativeLayout 
	            android:id="@+id/rl_frag_signup_fb_contents_name"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent">
	            
	            <TextView 
	                android:id="@+id/txt_frag_signup_fb_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="10dp"
	                android:textColor="@color/color_text_dark_gray_666666"
	                android:textSize="18sp"
	                android:textStyle="bold"
	                android:text=""/>
	        </RelativeLayout>
	    </LinearLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_signup_fb_email"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp">
	        
	        <EditText
	            android:id="@+id/edt_frag_signup_fb_email"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:inputType="textEmailAddress"
	            android:singleLine="true"
	            android:textColor="@color/color_text_dark_gray_666666"
	            android:textSize="16sp"
	            android:text=""/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_signup_fb_mobile"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="5dp">
	        
	        <EditText
	            android:id="@+id/edt_frag_signup_fb_mobile"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:textColor="@color/color_text_dark_gray_666666"
	            android:textSize="16sp"
	            android:text=""
	            android:textColorHint="@color/color_text_pending_a5a5a5"
	            android:hint="@string/signup_fb_mobile_hint"
	            android:inputType="textPhonetic"
	            android:singleLine="true"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_signup_fb_hint"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="5dp">
	        
	        <TextView
	            android:id="@+id/txt_frag_signup_hint"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:gravity="center"
	            android:textColor="@color/color_text_gray_858585"
	            android:textSize="12sp"
	            android:text=""/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_signup_fb_proceed"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp">
	        
	        <Button
	            android:id="@+id/btn_frag_signup_fb_proceed"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:background="@drawable/bg_round_purple"
	            android:text="@string/signup_fb_proceed"
	            android:textColor="@android:color/white"
	            android:textSize="18sp"/>
	    </RelativeLayout>
	</LinearLayout>
</RelativeLayout>
