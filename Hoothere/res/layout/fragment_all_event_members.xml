<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
	<RelativeLayout 
	    android:id="@+id/rl_frag_all_event_members_header"
	    android:layout_width="match_parent"
	    android:layout_height="90dp"
	    android:background="@color/color_purple">
	    
	    <LinearLayout 
	        android:id="@+id/ll_frag_all_event_members_header"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical">
	        
	        <RelativeLayout 
	            android:id="@+id/rl_frag_all_event_members_header_menus"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:paddingLeft="20dp"
	            android:paddingRight="20dp"
	            android:layout_marginTop="10dp">
	            
	            <ImageView
			        android:id="@+id/iv_frag_all_event_members_header_back"
			        android:layout_width="30dp"
			        android:layout_height="45dp"
			        android:paddingTop="10dp"
			        android:paddingBottom="10dp"
			        android:paddingRight="10dp"
			        android:layout_centerVertical="true"
			        android:src="@drawable/icon_header_back_white"
			        android:scaleType="fitCenter"/>
	            
				<TextView
			        android:id="@+id/txt_frag_all_event_members_header_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerInParent="true"
			        android:gravity="center"
			        android:text="@string/event_members_title"
			        android:textSize="20sp"
			        android:textStyle="bold"
			        android:textColor="@android:color/white"/>
	        </RelativeLayout>
	        
	        <RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="1dp"
	            android:layout_marginTop="5dp"
	            android:layout_marginBottom="5dp"
	            android:background="@android:color/black"/>
	        
	        <RelativeLayout 
		        android:id="@+id/rl_frag_all_event_members_header_tab"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:paddingLeft="20dp"
		        android:paddingRight="20dp">
		        
		        <LinearLayout 
		            android:id="@+id/ll_frag_all_event_members_header_tabs"
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:orientation="horizontal">
		            
			        <RelativeLayout 
			            android:id="@+id/rl_frag_all_event_members_header_tab_friends"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1">
			            
			            <Button
			                android:id="@+id/btn_frag_all_event_members_header_tab_friends"
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:layout_alignParentBottom="true"
			                android:layout_marginBottom="5dp"
			                android:textColor="@android:color/white"
			                android:paddingTop="3dp"
			                android:paddingBottom="3dp"
			                android:textSize="17sp"
			                android:text="@string/event_members_your_friends"
			                android:background="@drawable/bg_tabbutton_left_purple"/>
			        </RelativeLayout>

			        <RelativeLayout 
			            android:id="@+id/rl_frag_all_event_members_header_tab_new_connections"
			            android:layout_width="0dp"
			            android:layout_height="match_parent"
			            android:layout_weight="1">
			            
			            <Button
			                android:id="@+id/btn_frag_all_event_members_header_tab_new_connections"
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:layout_alignParentBottom="true"
			                android:layout_marginBottom="5dp"
			                android:textColor="@color/color_purple"
			                android:paddingTop="3dp"
			                android:paddingBottom="3dp"
			                android:textSize="17sp"
			                android:text="@string/event_members_new_connections"
			                android:background="@drawable/bg_tabbutton_right_white"/>
			        </RelativeLayout>
		        </LinearLayout>
		    </RelativeLayout>
	    </LinearLayout>    
	</RelativeLayout>
	
	<RelativeLayout 
	    android:id="@+id/rl_frag_all_event_members_content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/rl_frag_all_event_members_header">	    
	    
	    <ListView
	        android:id="@+id/lv_frag_all_event_members"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
            android:transcriptMode="disabled"
            android:clipToPadding="false"/>	    
	</RelativeLayout>
	
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/rl_frag_all_event_members_header">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_shadow"
            android:scaleType="fitXY"
            android:alpha="0.3"/>
    </RelativeLayout>
	
</RelativeLayout>
