<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp" >
    
	<LinearLayout 
	    android:id="@+id/ll_item_eventalbums_content"
	    android:layout_width="match_parent"
	    android:layout_height="110dp"
	    android:orientation="horizontal"
	    android:layout_marginTop="5dp"
	    android:layout_marginBottom="5dp">
	    
	    <RelativeLayout 
	        android:id="@+id/rl_item_eventalbums_content_1"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="5dp">
	        
	        <ImageView
	            android:id="@+id/iv_item_eventalbums_content_1"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:src="@drawable/image_blank_eventalbum"
	            android:scaleType="fitXY"/>
	    </RelativeLayout>
	    
		<RelativeLayout 
	        android:id="@+id/rl_item_eventalbums_content_2"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp">
	        
	        <ImageView
	            android:id="@+id/iv_item_eventalbums_content_2"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:src="@drawable/image_blank_eventalbum"
	            android:scaleType="fitXY"/>
	    </RelativeLayout>
	    
		<RelativeLayout 
	        android:id="@+id/rl_item_eventalbums_content_3"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="10dp">
	        
	        <ImageView
	            android:id="@+id/iv_item_eventalbums_content_3"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:src="@drawable/image_blank_eventalbum"
	            android:scaleType="fitXY"/>
	    </RelativeLayout>
	</LinearLayout>
</RelativeLayout>
