<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
	<RelativeLayout 
        android:id="@+id/rl_frag_change_pwd_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_purple">
        
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:padding="10dp">
		    
		    <ImageView
		        android:id="@+id/iv_frag_change_pwd_header_back"
		        android:layout_width="30dp"
		        android:layout_height="45dp"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:paddingRight="10dp"
		        android:layout_centerVertical="true"
		        android:src="@drawable/icon_header_back_white"
		        android:scaleType="fitCenter"/>
		    
		    <TextView
		        android:id="@+id/txt_frag_change_pwd_header_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:gravity="center"
		        android:text="@string/change_pwd_title"
		        android:textSize="20sp"
		        android:textStyle="bold"
		        android:textColor="@android:color/white"/>
		</RelativeLayout>        
    </RelativeLayout>
    
	<LinearLayout 
	    android:id="@+id/ll_frag_change_pwd_content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/rl_frag_change_pwd_header"
	    android:layout_marginTop="20dp"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:orientation="vertical">
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_change_pwd_content_current_pwd_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        
	        <TextView
	            android:id="@+id/txt_frag_change_pwd_content_current_pwd_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:textColor="@color/color_text_dark_gray_666666"
	            android:textSize="17sp"
	            android:text="@string/change_pwd_current_pwd"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_change_pwd_content_current_pwd"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp">
	        
	        <EditText
	            android:id="@+id/edt_frag_change_pwd_content_current_pwd"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:textSize="17sp"
	            android:text=""
	            android:inputType="textPassword"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_change_pwd_content_new_pwd_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp">
	        
	        <TextView
	            android:id="@+id/txt_frag_change_pwd_content_new_pwd_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:textColor="@color/color_text_dark_gray_666666"
	            android:textSize="17sp"
	            android:text="@string/change_pwd_new_pwd"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_change_pwd_content_new_pwd"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp">
	        
	        <EditText
	            android:id="@+id/edt_frag_change_pwd_content_new_pwd"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:textSize="17sp"
	            android:text=""
	            android:inputType="textPassword"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_change_pwd_content_confirm_pwd_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp">
	        
	        <TextView
	            android:id="@+id/txt_frag_change_pwd_content_confirm_pwd_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:textColor="@color/color_text_dark_gray_666666"
	            android:textSize="17sp"
	            android:text="@string/change_pwd_confirm_pwd"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_change_pwd_content_confirm_pwd"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp">
	        
	        <EditText
	            android:id="@+id/edt_frag_change_pwd_content_confirm_pwd"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:textSize="17sp"
	            android:text=""
	            android:inputType="textPassword"/>
	    </RelativeLayout>
	    
	    <LinearLayout 
	        android:id="@+id/rl_frag_change_pwd_content_action"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal">
	        
	        <RelativeLayout 
	            android:id="@+id/rl_frag_change_pwd_content_cancel"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1">
	            
	            <Button
	                android:id="@+id/btn_frag_change_pwd_content_cancel"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="5dp"
	                android:layout_marginBottom="20dp"
	                android:layout_alignParentBottom="true"
	                android:padding="5dp"
	                android:textColor="@color/color_purple"
	                android:textSize="17sp"
	                android:text="@string/change_pwd_cancel"
	                android:background="@drawable/bg_round_white_10"/>
	        </RelativeLayout>
	        
	        <RelativeLayout 
	            android:id="@+id/rl_frag_change_pwd_content_save"
	            android:layout_width="0dp"
	            android:layout_height="match_parent"
	            android:layout_weight="1">
	            
	            <Button
	                android:id="@+id/btn_frag_change_pwd_content_save"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:layout_marginBottom="20dp"
	                android:layout_alignParentBottom="true"
	                android:padding="5dp"
	                android:textColor="@android:color/white"
	                android:textSize="17sp"
	                android:text="@string/change_pwd_save"
	                android:background="@drawable/bg_round_purple"/>
	        </RelativeLayout>
	    </LinearLayout>
	</LinearLayout>
	
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/rl_frag_change_pwd_header">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_shadow"
            android:scaleType="fitXY"
            android:alpha="0.3"/>
    </RelativeLayout>
</RelativeLayout>
