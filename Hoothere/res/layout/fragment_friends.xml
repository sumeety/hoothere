<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
    <RelativeLayout 
        android:id="@+id/rl_frag_friends_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_purple">
        
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:padding="10dp">
		    
		    <TextView
		        android:id="@+id/txt_frag_search_event_header_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:gravity="center"
		        android:text="@string/friends_header_title"
		        android:textSize="20sp"
		        android:textStyle="bold"
		        android:textColor="@android:color/white"/>
		</RelativeLayout>
		
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="1dp"
		    android:layout_alignParentBottom="true"
		    android:background="@color/color_text_gray_858585"/>
    </RelativeLayout>
    
	<RelativeLayout 
        android:id="@+id/rl_frag_friends_header_divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/rl_frag_friends_header">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_shadow"
            android:scaleType="fitXY"
            android:alpha="0.3"/>
    </RelativeLayout>    
    
    <RelativeLayout 
	    android:id="@+id/rl_frag_friends"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/rl_frag_friends_header_divider"
	    android:background="@android:color/white"
	    android:visibility="visible">
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_friends_tab"
	        android:layout_width="match_parent"
	        android:layout_height="30dp">
		    <LinearLayout 
		        android:id="@+id/ll_frag_friends_tab"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="horizontal"
		        android:background="@color/color_light_gray_f7f7f7">
		        
		        <RelativeLayout 
		            android:id="@+id/rl_frag_friends_tab_friends"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1">
		            
		            <ImageView
		                android:id="@+id/iv_frag_friends_tab_friends"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:layout_margin="5dp"
		                android:src="@drawable/icon_logo_white"
		                android:scaleType="fitCenter"/>
		        </RelativeLayout>
		        
		        <RelativeLayout 
		            android:layout_width="1dp"
		            android:layout_height="match_parent"
		            android:background="@color/color_divider_light_gray"/>
		        
		        <RelativeLayout 
		            android:id="@+id/rl_frag_friends_tab_facebook"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1">
		            
		            <ImageView
		                android:id="@+id/iv_frag_friends_tab_facebook"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:layout_margin="5dp"
		                android:src="@drawable/icon_facebook"
		                android:scaleType="fitCenter"/>
		        </RelativeLayout>
		        
		        <RelativeLayout 
		            android:layout_width="1dp"
		            android:layout_height="match_parent"
		            android:background="@color/color_divider_light_gray"/>
		        
		        <RelativeLayout 
		            android:id="@+id/rl_frag_friends_tab_contacts"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1">
		            
		            <ImageView
		                android:id="@+id/iv_frag_friends_tab_contacts"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:layout_margin="5dp"
		                android:src="@drawable/icon_contacts"
		                android:scaleType="fitCenter"/>
		        </RelativeLayout>
		        
		        <RelativeLayout 
		            android:layout_width="1dp"
		            android:layout_height="match_parent"
		            android:background="@color/color_divider_light_gray"/>
		        
		        <RelativeLayout 
		            android:id="@+id/rl_frag_friends_tab_search"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1">
		            
		            <ImageView
		                android:id="@+id/iv_frag_friends_tab_search"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:layout_margin="5dp"
		                android:src="@drawable/icon_search"
		                android:scaleType="fitCenter"/>
		        </RelativeLayout>
		    </LinearLayout>
	    
		    <RelativeLayout 
		        android:id="@+id/rl_frag_friends_tab_underbar"
		        android:layout_width="match_parent"
		        android:layout_height="3dp"
		        android:layout_alignParentBottom="true">
		        
		        <ImageView
		            android:id="@+id/iv_frag_friends_tab_underbar"
		            android:layout_width="90dp"
		            android:layout_height="match_parent"
		            android:src="@drawable/icon_tab_underline"
		            android:scaleType="fitXY"/>
		    </RelativeLayout>
		</RelativeLayout>		    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_friends_search"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_below="@+id/rl_frag_friends_tab"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp">
	        
	        <RelativeLayout 
	            android:id="@+id/rl_frag_friends_search_hint"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@color/color_light_gray_f7f7f7">
	            
	            <RelativeLayout
	                android:id="@+id/rl_frag_friends_search_hint_text"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_centerInParent="true"
	                android:padding="5dp">
	                
	                <ImageView
	                    android:id="@+id/iv_frag_friends_search_icon"
	                    android:layout_width="wrap_content"
	                    android:layout_height="match_parent"
	                    android:src="@drawable/icon_search"
	                    android:scaleType="fitCenter"/>
	                
	                <TextView
	                    android:id="@+id/txt_frag_friends_search_hint"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"	                    
	                    android:layout_toRightOf="@+id/iv_frag_friends_search_icon"
	                    android:layout_marginLeft="10dp"
	                    android:layout_centerVertical="true"
	                    android:textColor="@color/color_search_hint"
	                    android:textSize="17sp"
	                    android:text="@string/search_hint"/>                    
	            </RelativeLayout>
	            
	            <EditText
	                android:id="@+id/edt_frag_friends_search"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:textSize="17sp"
	                android:textColor="@color/color_text_dark_gray_666666"
	                android:text=""
	                android:hint="Enter Name"
	                android:textColorHint="@color/color_text_gray_858585"
	                android:background="@android:color/transparent"
	                android:visibility="gone"/>
	        </RelativeLayout>
	    </RelativeLayout>
	    
		<RelativeLayout 
		    android:id="@+id/rl_frag_friends_contents"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_below="@+id/rl_frag_friends_search">
		    
		    <ListView
	            android:id="@+id/lv_frag_friends"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"	        
	            android:transcriptMode="disabled"
	            android:clipToPadding="false"/>
		    
		    <LinearLayout 
		        android:id="@+id/ll_frag_friends_contents_no_friend"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="vertical"
		        android:visibility="gone">
		        
		        <RelativeLayout 
		            android:layout_width="match_parent"
		            android:layout_height="0dp"
		            android:layout_weight="0.5"/>

		        <RelativeLayout 
		            android:layout_width="match_parent"
		            android:layout_height="0dp"
		            android:layout_weight="2.5">		        
			    
		            <ImageView 
			            android:id="@+id/iv_frag_friends_contents_no_friend"
			            android:layout_width="match_parent"
			            android:layout_height="match_parent"
			            android:layout_centerInParent="true"
			            android:src="@drawable/no_friend"
			            android:scaleType="fitCenter"/>
			    </RelativeLayout>
			    
		        <LinearLayout 
		            android:layout_width="match_parent"
		            android:layout_height="0dp"
		            android:layout_weight="0.8"
		            android:orientation="vertical">
		            
		            <RelativeLayout 
		                android:layout_width="match_parent"
		                android:layout_height="0dp"
		                android:layout_weight="1">
		                
		                <TextView
		                    android:id="@+id/txt_frag_friends_contents_alone_here"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_centerInParent="true"
		                    android:textColor="@color/color_text_pending_a5a5a5"
		                    android:textStyle="bold"
		                    android:textSize="24sp"
		                    android:text="@string/you_are_alone"/>
		            </RelativeLayout>
		            
		            <RelativeLayout 
		                android:id="@+id/txt_frag_friends_contents_click_search"
		                android:layout_width="match_parent"
		                android:layout_height="0dp"
		                android:layout_weight="1">
		                
		                <TextView
		                    android:id="@+id/txt_frag_friends_contents_clickonsearch"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_centerInParent="true"
		                    android:textColor="@color/color_text_pending_a5a5a5"
		                    android:textSize="15sp"
							android:text="@string/click_search_button"/>
		            </RelativeLayout>
		        </LinearLayout>
		        
		        <RelativeLayout 
		            android:layout_width="match_parent"
		            android:layout_height="0dp"
		            android:layout_weight="0.5"/>
		    </LinearLayout>
		</RelativeLayout>	    
	</RelativeLayout>
</RelativeLayout>
