<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="20dp"
	    android:orientation="vertical">
	    
	    <RelativeLayout 
	        android:id="@+id/rl_logo_image"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="4">
	        
	        <ImageView
	            android:id="@+id/iv_logo_image"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:src="@drawable/logo"
	            android:scaleType="fitCenter"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_logo_title"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1.3">
	        
	        <TextView
	            android:id="@+id/txt_frag_logo_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:gravity="center"
	            android:textColor="@color/color_text_dark_gray_666666"
	            android:textSize="20sp"
	            android:text="@string/logo_title"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_logo_thanks"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1">
	        
	        <TextView
	            android:id="@+id/txt_frag_logo_thanks"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:gravity="center"
	            android:textColor="@color/color_text_dark_gray_666666"
	            android:textSize="16sp"
	            android:text="@string/logo_thanks"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_logo_navigator"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="0.3">
	        
	        <ImageView
	            android:id="@+id/iv_frag_logo_navigator"
	            android:layout_width="75dp"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:src="@drawable/logo_navigator_1"
	            android:scaleType="fitCenter"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_logo_get_started"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="1">
	        
	        <Button
	            android:id="@+id/btn_frag_logo_get_started"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:padding="10dp"
	            android:background="@drawable/bg_round_purple"
	            android:textColor="@color/color_white"
	            android:textSize="19sp"
	            android:text="@string/logo_get_started"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_logo_login"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_marginTop="10dp"
	        android:layout_weight="1">
	        
	        <Button
	            android:id="@+id/btn_frag_logo_login"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:padding="10dp"
	            android:background="@drawable/bg_round_white_10"
	            android:textColor="@color/color_text_dark_gray_666666"
	            android:textSize="19sp"
	            android:text="@string/logo_login"/>
	    </RelativeLayout>
	</LinearLayout>
</RelativeLayout>
