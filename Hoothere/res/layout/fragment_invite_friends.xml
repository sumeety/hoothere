<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
	<RelativeLayout 
        android:id="@+id/rl_frag_invite_friends_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_purple">
        
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:padding="10dp">
		    
		    <ImageView
		        android:id="@+id/iv_frag_invite_friends_header_back"
		        android:layout_width="30dp"
		        android:layout_height="45dp"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:paddingRight="10dp"
		        android:layout_centerVertical="true"
		        android:src="@drawable/icon_header_back_white"
		        android:scaleType="fitCenter"/>
		    
		    <TextView
		        android:id="@+id/txt_frag_invite_friends_header_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:gravity="center"
		        android:text="@string/invite_friends_title"
		        android:textSize="20sp"
		        android:textStyle="bold"
		        android:textColor="@android:color/white"/>
		</RelativeLayout>        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/rl_frag_invite_friends_header_divider"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/rl_frag_invite_friends_header">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_shadow"
            android:scaleType="fitXY"
            android:alpha="0.3"/>
    </RelativeLayout>
    
	<RelativeLayout 
	    android:id="@+id/rl_frag_invite_friends_friends"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/rl_frag_invite_friends_header_divider"
	    android:background="@android:color/white">
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_invite_friends_friends_tab"
	        android:layout_width="match_parent"
	        android:layout_height="30dp">
		    <LinearLayout 
		        android:id="@+id/ll_frag_invite_friends_friends_tab"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:orientation="horizontal"
		        android:background="@color/color_light_gray_f7f7f7">
		        
		        <RelativeLayout 
		            android:id="@+id/rl_frag_invite_friends_friends_tab_friends"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1">
		            
		            <ImageView
		                android:id="@+id/iv_frag_invite_friends_friends_tab_friends"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:layout_margin="5dp"
		                android:src="@drawable/icon_logo_white"
		                android:scaleType="fitCenter"/>
		        </RelativeLayout>
		        
		        <RelativeLayout 
		            android:layout_width="1dp"
		            android:layout_height="match_parent"
		            android:background="@color/color_divider_light_gray"/>
		        
		        <RelativeLayout 
		            android:id="@+id/rl_frag_invite_friends_friends_tab_facebook"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1">
		            
		            <ImageView
		                android:id="@+id/iv_frag_invite_friends_friends_tab_facebook"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:layout_margin="5dp"
		                android:src="@drawable/icon_facebook"
		                android:scaleType="fitCenter"/>
		        </RelativeLayout>
		        
		        <RelativeLayout 
		            android:layout_width="1dp"
		            android:layout_height="match_parent"
		            android:background="@color/color_divider_light_gray"/>
		        
		        <RelativeLayout 
		            android:id="@+id/rl_frag_invite_friends_friends_tab_contacts"
		            android:layout_width="0dp"
		            android:layout_height="match_parent"
		            android:layout_weight="1">
		            
		            <ImageView
		                android:id="@+id/iv_frag_invite_friends_friends_tab_contacts"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:layout_margin="5dp"
		                android:src="@drawable/icon_contacts"
		                android:scaleType="fitCenter"/>
		        </RelativeLayout>
		    </LinearLayout>
	    
		    <RelativeLayout 
		        android:id="@+id/rl_frag_invite_friends_friends_tab_underbar"
		        android:layout_width="match_parent"
		        android:layout_height="3dp"
		        android:layout_alignParentBottom="true">
		        
		        <ImageView
		            android:id="@+id/iv_frag_invite_friends_friends_tab_underbar"
		            android:layout_width="120dp"
		            android:layout_height="match_parent"
		            android:src="@drawable/icon_tab_underline"
		            android:scaleType="fitXY"/>
		    </RelativeLayout>
		</RelativeLayout>	
			    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_invite_friends_friends_search"
	        android:layout_width="match_parent"
	        android:layout_height="50dp"
	        android:layout_below="@+id/rl_frag_invite_friends_friends_tab"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp">
	        
	        <RelativeLayout 
	            android:id="@+id/rl_frag_invite_friends_friends_search_hint"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="@color/color_light_gray_f7f7f7">
	            
	            <RelativeLayout
	                android:id="@+id/rl_frag_invite_friends_friends_search_hint_text"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_centerInParent="true"
	                android:padding="5dp">
	                
	                <ImageView
	                    android:id="@+id/iv_frag_invite_friends_friends_search_icon"
	                    android:layout_width="wrap_content"
	                    android:layout_height="match_parent"
	                    android:src="@drawable/icon_search"
	                    android:scaleType="fitCenter"/>
	                
	                <TextView
	                    android:id="@+id/txt_frag_invite_friends_friends_search_hint"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"	                    
	                    android:layout_toRightOf="@+id/iv_frag_invite_friends_friends_search_icon"
	                    android:layout_marginLeft="10dp"
	                    android:layout_centerVertical="true"
	                    android:textColor="@color/color_search_hint"
	                    android:textSize="17sp"
	                    android:text="@string/search_hint"/>                    
	            </RelativeLayout>
	            
	            <EditText
	                android:id="@+id/edt_frag_invite_friends_friends_search"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_centerVertical="true"
	                android:layout_marginLeft="10dp"
	                android:layout_marginRight="10dp"
	                android:textSize="17sp"
	                android:textColor="@color/color_text_dark_gray_666666"
	                android:text=""
	                android:hint="Enter Name"
	                android:textColorHint="@color/color_text_gray_858585"
	                android:background="@android:color/transparent"
	                android:visibility="gone"/>
	        </RelativeLayout>
	    </RelativeLayout>
	    
		<RelativeLayout 
		    android:id="@+id/rl_frag_invite_friends_friends_contents"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_above="@+id/ll_frag_invite_friends_action"
		    android:layout_below="@+id/rl_frag_invite_friends_friends_search">
		    
		    <ListView
	            android:id="@+id/lv_frag_invite_friends_friends"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"	        
	            android:transcriptMode="disabled"
	            android:clipToPadding="false"/>
		</RelativeLayout>
		
		<LinearLayout 
		    android:id="@+id/ll_frag_invite_friends_action"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:paddingLeft="20dp"
		    android:paddingRight="20dp"
		    android:paddingTop="5dp"
		    android:paddingBottom="5dp"
		    android:orientation="horizontal"
		    android:background="@android:color/white">
		    
		    <RelativeLayout 
		        android:id="@+id/rl_frag_invite_friends_action_cancel"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_marginRight="10dp">
	            
		        <Button
		            android:id="@+id/btn_frag_invite_friends_action_cancel"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:paddingTop="5dp"
		            android:paddingBottom="5dp"
		            android:textColor="@color/color_purple"
		            android:textSize="18sp"
		            android:text="@string/alert_dlg_cancel"
		            android:background="@drawable/bg_round_white_10"/>		        
		    </RelativeLayout>
		    
		    <RelativeLayout 
		        android:id="@+id/rl_frag_invite_friends_action_invite"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_marginLeft="10dp">
	            
		        <Button
		            android:id="@+id/btn_frag_invite_friends_action_invite"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:paddingTop="5dp"
		            android:paddingBottom="5dp"
		            android:textColor="@color/color_white"
		            android:textSize="18sp"
		            android:text="@string/invite_friends_invite"
		            android:background="@drawable/bg_round_purple"/>		        
		    </RelativeLayout>
		    
		</LinearLayout>		    
	</RelativeLayout>
</RelativeLayout>
