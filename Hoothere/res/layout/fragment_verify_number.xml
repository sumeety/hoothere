<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@android:color/white">
    
	<RelativeLayout 
        android:id="@+id/rl_frag_verify_number_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_purple">
        
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:padding="10dp">
		    
		    <ImageView
		        android:id="@+id/iv_frag_verify_number_header_back"
		        android:layout_width="30dp"
		        android:layout_height="45dp"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:paddingRight="10dp"
		        android:layout_centerVertical="true"
		        android:src="@drawable/icon_header_back_white"
		        android:scaleType="fitCenter"/>
		    
		    <TextView
		        android:id="@+id/txt_frag_verify_number_header_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:gravity="center"
		        android:text="@string/verify_number_title"
		        android:textSize="20sp"
		        android:textStyle="bold"
		        android:textColor="@android:color/white"/>
		</RelativeLayout>        
    </RelativeLayout>
    
	<LinearLayout 
	    android:id="@+id/ll_frag_verify_number_content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/rl_frag_verify_number_header"
	    android:layout_marginTop="10dp"
	    android:padding="15dp"
	    android:orientation="vertical">
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_verify_number_alert"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        
	        <TextView
	            android:id="@+id/txt_frag_verify_number_alert"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:textColor="@color/color_text_dark_gray_666666"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:text="@string/verify_number_alert"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_verify_number_hint"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        
	        <TextView
	            android:id="@+id/txt_frag_verify_number_hint1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:textColor="@color/color_text_gray_858585"
	            android:textSize="15sp"
	            android:text="@string/verify_number_hint1"/>
	        
	        <RelativeLayout 
	            android:id="@+id/rl_frag_verify_number_hint2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/txt_frag_verify_number_hint1"
	            android:layout_marginTop="20dp"
	            android:layout_centerHorizontal="true">
	            
		        <TextView
		            android:id="@+id/txt_frag_verify_number_hint2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:textColor="@color/color_text_gray_858585"
		            android:textSize="15sp"
		            android:text="@string/verify_number_hint2"/>

		        <TextView
		            android:id="@+id/txt_frag_verify_number_your_number"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:layout_toRightOf="@+id/txt_frag_verify_number_hint2"
		            android:layout_marginLeft="10dp"
		            android:textColor="@color/color_text_gray_858585"
		            android:textSize="15sp"
		            android:textStyle="bold"
		            android:text="+1231"/>
	        </RelativeLayout>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_verify_number_input"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp">
	        
	        <EditText
	            android:id="@+id/edt_frag_verify_number_input"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:textColor="@android:color/black"
	            android:textSize="18sp"
	            android:text=""
	            android:textColorHint="@color/color_text_gray_858585"
	            android:hint="@string/verify_number_code_hint"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_verify_number_not_received" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        
	        <TextView 
	            android:id="@+id/txt_frag_verify_number_not_received"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:textColor="@color/color_text_blue_5d90cf"
	            android:textSize="16sp"
	            android:text="@string/verify_number_not_received_yet"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_verify_number_finish"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp">
	        
	        <Button
	            android:id="@+id/btn_frag_verify_number_finish"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:textColor="@android:color/white"
	            android:textSize="18sp"
	            android:text="Verify"
	            android:background="@drawable/bg_round_purple"/>
	            
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_verify_number_change"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="30dp">
	        
	        <Button
	            android:id="@+id/btn_frag_verify_number_change"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:paddingTop="10dp"
	            android:paddingBottom="10dp"
	            android:textColor="@color/color_purple"
	            android:textSize="18sp"
	            android:text="@string/verify_number_change"
	            android:background="@drawable/bg_round_white_10"/>
	    </RelativeLayout>
	</LinearLayout>
	
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/rl_frag_verify_number_header">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_shadow"
            android:scaleType="fitXY"
            android:alpha="0.3"/>
    </RelativeLayout>
</RelativeLayout>
