<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
	<RelativeLayout
	    android:id="@+id/rl_notification_rowitem_loadmore_parent"
	    android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:layout_centerVertical="true">
	    
	    <RelativeLayout 
	        android:id="@+id/rl_notification_rowitem_loadmore"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true">
	        
	        <ProgressBar
		        android:id="@+id/pb_notification_rowitem_loadmore"
		        style="?android:attr/progressBarStyleSmall"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"/>
	        
	        <TextView
	            android:id="@+id/txt_notification_rowitem_loadmore"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@+id/pb_notification_rowitem_loadmore"
	            android:layout_marginLeft="10dp"
	            android:textColor="@color/color_text_gray_858585"
	            android:textSize="15sp"
	            android:singleLine="true"
	            android:text="@string/loading_more_notifications"/>
	    </RelativeLayout>
	</RelativeLayout>

</RelativeLayout>
