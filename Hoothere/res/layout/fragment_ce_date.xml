<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
	<RelativeLayout 
        android:id="@+id/rl_frag_ce_date_header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/color_purple">
        
		<RelativeLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:padding="10dp">
		    
		    <ImageView
		        android:id="@+id/iv_frag_ce_date_header_back"
		        android:layout_width="30dp"
		        android:layout_height="45dp"
		        android:paddingTop="10dp"
		        android:paddingBottom="10dp"
		        android:paddingRight="10dp"
		        android:layout_centerVertical="true"
		        android:src="@drawable/icon_header_back_white"
		        android:scaleType="fitCenter"/>
		    
		    <TextView
		        android:id="@+id/txt_frag_ce_date_header_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:layout_marginLeft="30dp"
		        android:gravity="center"
		        android:text=""
		        android:textSize="20sp"
		        android:textStyle="bold"
		        android:singleLine="true"
		        android:textColor="@android:color/white"/>
		</RelativeLayout>
    </RelativeLayout>
    
	<LinearLayout 
	    android:id="@+id/ll_frag_ce_date_content"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/rl_frag_ce_date_header"
	    android:orientation="vertical"
	    android:padding="10dp">
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_ce_date_starting"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp">
	        
	        <TextView
	            android:id="@+id/txt_frag_ce_date_starting"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/color_text_dark_gray_666666"
	            android:textSize="15sp"
	            android:text="@string/ce_date_start"/>
	        
	        <TextView
	            android:id="@+id/edt_frag_ce_date_starting"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/txt_frag_ce_date_starting"
	            android:layout_marginTop="5dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:textColor="@color/color_text_dark_gray_666666"
	            android:textSize="18sp"
	            android:text=""
	            android:textColorHint="@color/color_text_gray_858585"
	            android:hint="@string/ce_date_no_date"
	            android:background="@color/color_light_gray_f7f7f7"/>
	    </RelativeLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_ce_date_ending"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp">
	        
	        <TextView
	            android:id="@+id/txt_frag_ce_date_ending"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/color_text_dark_gray_666666"
	            android:textSize="15sp"
	            android:text="@string/ce_date_end"/>
	        
	        <TextView
	            android:id="@+id/edt_frag_ce_date_ending"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/txt_frag_ce_date_ending"
	            android:layout_marginTop="5dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="5dp"
	            android:paddingBottom="5dp"
	            android:textColor="@color/color_text_dark_gray_666666"
	            android:textSize="18sp"
	            android:text=""
	            android:textColorHint="@color/color_text_gray_858585"
	            android:hint="@string/ce_date_no_date"
	            android:background="@color/color_light_gray_f7f7f7"/>
	    </RelativeLayout>
	    
	    <LinearLayout 
	        android:id="@+id/ll_frag_ce_date_actions"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="40dp"
	        android:orientation="horizontal">
	        
	        <RelativeLayout 
	            android:id="@+id/rl_frag_ce_date_skip"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1">
	            
	            <Button
	                android:id="@+id/btn_frag_ce_date_skip"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginRight="5dp"
	                android:paddingTop="5dp"
	                android:paddingBottom="5dp"
	                android:background="@drawable/bg_round_white_10"
	                android:textColor="@color/color_purple"
	                android:textSize="18sp"
	                android:text="@string/ce_date_skip"/>
	        </RelativeLayout>
	        
	        <RelativeLayout 
	            android:id="@+id/rl_frag_ce_date_next"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1">
	            
	            <Button
	                android:id="@+id/btn_frag_ce_date_next"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="5dp"
	                android:paddingTop="5dp"
	                android:paddingBottom="5dp"
	                android:background="@drawable/bg_round_purple"
	                android:textColor="@color/color_white"
	                android:textSize="18sp"
	                android:text="@string/ce_date_next"/>
	        </RelativeLayout>	        
	    </LinearLayout>
	</LinearLayout>
	
   	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/rl_frag_ce_date_header">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/header_shadow"
            android:scaleType="fitXY"
            android:alpha="0.3"/>
    </RelativeLayout>
	
	<RelativeLayout 
        android:id="@+id/rl_frag_ce_date_selection_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:visibility="visible">
	    
	    <RelativeLayout 
	        android:id="@+id/rl_frag_ce_date_selection_divider"
	        android:layout_width="match_parent"
	        android:layout_height="2dp"
	        android:background="@color/color_text_dark_gray_666666"/>
        
	    <RelativeLayout 
	        android:id="@+id/rl_frag_ce_date_selection_action"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/rl_frag_ce_date_selection_divider"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:paddingTop="5dp"
	        android:paddingBottom="5dp">
	        
	        <TextView
	            android:id="@+id/txt_frag_ce_date_selection_cancel"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:textColor="@color/color_action_button"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:text="@string/alert_dlg_cancel"/>
	        
	        <TextView
	            android:id="@+id/txt_frag_ce_date_selection_done"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:textColor="@color/color_action_button"
	            android:textSize="18sp"
	            android:textStyle="bold"
	            android:text="@string/alert_dlg_done"/>
	    </RelativeLayout>
	    
        <LinearLayout 
            android:id="@+id/rl_frag_ce_date_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_frag_ce_date_selection_action"
            android:layout_marginBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">
            
            <RelativeLayout 
                android:id="@+id/rl_frag_ce_date_selection_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView 
                    android:id="@+id/txt_frag_ce_date_selection_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_text_gray_858585"
                    android:textSize="17sp"
                    android:text="@string/ce_date_hint_start"/>
            </RelativeLayout>
            
            <RelativeLayout 
                android:id="@+id/rl_frag_ce_date_selection_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
				<DatePicker
		            android:id="@+id/dp_frag_ce_date"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerHorizontal="true"/>
	
		        <TimePicker
		            android:id="@+id/tp_frag_ce_time"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_below="@+id/dp_frag_ce_date"
		            android:layout_centerHorizontal="true"/>
	                
            </RelativeLayout>
        </LinearLayout>        
    </RelativeLayout>
</RelativeLayout>
